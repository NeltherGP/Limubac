{% extends 'limubacadministratorBundle:administracion:header.html.twig'%}

{% block PageContent %}


  <form class="form-horizontal" role="form" >
    <div class="row-fluid">
      <div class="col-md-12 borBox well btn-dashboard">     
        <div class="formAnotacion form-group">
          <div class="col-md-6 tLeft" >
            <h1>Crear Categoria</h1>
          </div>
        </div>
      </div>
    </div>

  <div class="row-fluid">
    <div class="col-md-7">
            {{form_start(form, {attr: {novalidate: 'novalidate'}}) }}
              <h3>Nombre:</h3>{{form_widget(form.nombre, {'attr': {'placeholder': 'Nombre'|trans}} )}}<font color="red"> *</font>
              <br><br>
              <h3>Limite de Equipos:</h3>{{form_widget(form.limiteEquipo, {'attr': {'placeholder': 'Limite de Equipos'|trans}} )}}<font color="red"> *</font>
              <br><br>
              <h3>Edad:</h3>{{form_widget(form.edad, {'attr': {'placeholder': 'Edad'|trans}} )}}<font color="red"> *</font>
              <br><br>
              <h3>Referencia de Edad:</h3>{{form_widget(form.refEdad, {'attr': {'placeholder': 'Referencia de Edad'|trans}} )}}<font color="red"> *</font><br>
            {{form_end(form)}}
    </div>

        <div class="col-md-2 tRight">
          <button class="btn btn-large btn-success sharp sp" type="submit" id="jugador_Salvar" name="jugador[Salvar]"><i class="glyphicon-ok glyphicon"></i> Salvar</button>
        <a class="btn btn-large btn-danger sharp" href="{{url('limubacadministrator_categorias')}}"><i class="glyphicon glyphicon-remove"></i> Cancelar</a>
    </div>
  </div>
  </form>
{% endblock %}