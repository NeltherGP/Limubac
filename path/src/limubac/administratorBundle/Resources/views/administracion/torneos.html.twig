{% extends 'limubacadministratorBundle:administracion:header.html.twig'%}

{% block PageContent %}

  <form class="form-horizontal" role="form" >
    <div class="row-fluid">
      <div class="col-md-12 borBox well btn-dashboard">     
        <div class="formAnotacion form-group">
          <div class="col-md-6 tLeft" >
            <h1>Torneos</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-md-12 borBox wellDark btn-dashboard">
        <div class="formAnotacion form-group">
          <h3 class="col-md-7">Accion</h3>
          <div class="btn-group sharp pull-right">
            <a class="btn btn-primary btn-info" href="{{url('limubacadministrator_categorias')}}"><i class="glyphicon-plus glyphicon"></i> Categorias</a>
            <a class="btn btn-primary btn-info" href="{{url('limubacadministrator_crearTorneo')}}"><i class="glyphicon-plus glyphicon"></i> Crear</a>
            <button class="btn btn-primary btn-info" type='submit'><i class="glyphicon-minus glyphicon"></i> Eliminar</button>
          </div>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-md-12" style="padding-left:0px; padding-right:0px;">
        <div class="formAnotacion form-group col-md-12" style="padding-left:0px; padding-right:0px;">
          <div class="col-md-12" style="padding-left:0px; padding-right:0px;">
            <table class="table table-bordered" >
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nombre</th>
                  <th>Fecha de Inicio</th>
                  <th>Fecha de Termino</th>
                  <th>Costo</th>
                  <th>Rama</th>
                  <th>Categoria</th>
                  <th>Editar</th>
                  <th>Seleccionar</th>
                </tr>
              </thead>
              <tbody>
                {% for entitie in entities %}
                  <tr>
                    <td> {{entitie.idTorneo}} </td>
                    <td> {{entitie.nombre}} </td>
                    <td> {{entitie.fInicio|date('Y-m-d')}} </td>
                    <td> {{entitie.fTermino|date('Y-m-d')}} </td>
                    <td> {{entitie.costo}} </td>
                    <td> {{entitie.rama}} </td>
                    <td> {{entitie.categ}} </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </form>

{% endblock %}