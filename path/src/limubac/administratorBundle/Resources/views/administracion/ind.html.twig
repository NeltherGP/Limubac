{% extends 'limubacadministratorBundle:administracion:header.html.twig'%}

{% block PageContent %}
	{% if status is not defined %}
		<form class="form" method="POST" enctype="multipart/form-data" action="{{path('limubacadministrator_upload')}}">
	    <h2 class="form-signin-heading">Favor de seleccionar fotografia</h2>
	    <input type="file" name="img">
	    <button class="btn btn-large btn-primary" type="submit">Cargar</button>
	  </form>
	{% elseif status=='success' %}
		{% if uploadedURL is defined %}
			<img src="{{asset(uploadedURL)}}">
		{% endif %}
	{% else %}
		{% if message is defined %}
			<div class="">
				<p> {{message}} </p>
			</div>
		{% endif %}
	{% endif %}
{% endblock %}